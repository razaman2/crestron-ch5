    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc -b && vite build",
        "preview": "vite preview",
        "ch5-archive": "ch5-cli archive -p tsw-560 -d dist -o archive",
        "ch5-build": "npm run build && npm run ch5-archive",
